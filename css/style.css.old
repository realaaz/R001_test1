.text::after,
.text::before,
.clearfix::after,
.clearfix::before{
	content: "";
	display: table;
	clear: both;
}

/* ==========================================================
                       Global Styles
============================================================= */
body{
	width: 100%;
	min-width: 960px;
	background: #323232;
	font-size: 16px;
	font-family: Arial, 'Helvetica Neue', Helvetica, sans-serif;
}


/* ==========================================================
            Header Area
============================================================= */

header{
	height: 60px;
	background: #282828;
	position: fixed;
	top: 0;
	width: 100%;
	border-bottom: none;
	z-index: 2;
	
}

.header_content{
	width: 940px;
	margin-left: auto;
	margin-right: auto;
}

/* ==========================================================
            Header Area >>> Logo
============================================================= */

.logo{
	text-decoration: none;
	color: #646464;
	font-size: 26px;
	line-height: 60px;
	text-transform: uppercase;
	cursor: hand;
	text-shadow: 1px 1px 2px black, 0 0 1em black;
}

/* ==========================================================
            Header Area >>> Menu
============================================================= */
menu{
	float: right;
	padding-left: 0;
	list-style: none;
	text-transform: uppercase;	
}

menu li {
	float: left;
	padding-left: 10px;
}

menu a{
	color: #646464;
	line-height: 60px;
	text-decoration: none;	
}

menu a:hover{
	color: #999999;
	text-decoration: none;	
}


/* ==========================================================
            Main Area
============================================================= */
main{
	width: 940px;
	margin-left: auto;
	margin-right: auto;
	background: rgba(250,250,255,.0);
	border: 2px solid #282828;
	padding: 20px;
	margin-top: 40px;

}

/* ==========================================================
            Main Area >>> Solutions
============================================================= */
.solution{
	line-height: 20px;
	color: black;
	text-align: justify;
	border: 2px solid #282828;
	margin-top: 20px;
	padding: 20px;
	border-radius: 4px;
	color: #646464;
	height: 200px;
	text-shadow: 1px 1px 2px black, 0 0 1em black;
}

h1{
	color: #00A9DC;
	font-size: 20px;
	text-transform: uppercase;
	line-height: 80px;
	text-shadow: 1px 1px 2px black, 0 0 1em black;
}

h2{
	color: #005DA5;
	font-size: 16px;
	text-transform: uppercase;
	line-height: 05px;

}


h3{
	margin-top: 20px;
	color: #E14164;
	font-size: 20px;
	text-transform: uppercase;
	line-height: 20px;
	text-shadow: 1px 1px 2px black, 0 0 1em black;

}

figure{
	float: left;
	margin-right: 20px;
	margin-bottom: 0px;
	overflow: hidden;
	width: 200px;
	height: 200;
	border-radius: 4px;
	border: 2px solid #282828;

}

p{
	margin-top: 30px;
}


/* ==========================================================
            Main Area >>> Technologies
============================================================= */
.tech_block_menu{
	width: 900px;
	margin-left: auto;
	margin-right: auto;
	border: 2px solid #282828;
	padding: 20px;
	margin-top: 20px;
	border-radius: 4px;
}

.technology{
	background: rgba(250,250,255,.0);
	float: left;
	width: 365px;
	height: 120px;
	margin-left: 20px;
	margin-right: 20px;
	margin-top: 20px;
	border: 2px solid #282828;
	border-radius: 4px;
	padding: 20px;
}

